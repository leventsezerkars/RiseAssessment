@{
    ViewData["Title"] = "Detail";
    var count = 0;
}
@model PersonContactDetailModel

<div class="d-flex justify-content-between">
    <div class="d-flex"><h2>@Model.Person.FullName</h2></div>
    <div class="d-flex"></div>
    <div class="d-flex">
        <a asp-controller="Home" asp-action="Update" class="btn btn-sm btn-warning mx-2" asp-route-id="@Model.Person.Id">Person Edit</a>
        <a asp-controller="Contact" asp-action="Create" class="btn btn-sm btn-info" asp-route-id="@Model.Person.Id">Add Detail</a>
    </div>
</div>
<hr />

@if (Model.Contacts.Any())
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Key</th>
                    <th scope="col">Info</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Contacts)
                {
                    <tr>
                        <th scope="row">@(++count)</th>
                        <td>@item.Type</td>
                        <td>@item.Detail</td>
                        <td>
                            <a asp-controller="Contact" asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>

   
}