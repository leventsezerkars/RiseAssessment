@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}
@model List<PersonDto>


<div class="d-flex justify-content-between">
    <div class="d-flex"><h2>Person List</h2></div>
    <div class="d-flex"></div>
    <div class="d-flex">
        <a asp-controller="Home" asp-action="Create" class="btn btn-sm btn-primary">Add Person</a>
        <a asp-controller="Home" asp-action="CreateReport" class="btn btn-sm btn-secondary">Report</a>
    </div>
</div>
<hr />

@if (Model.Any())
{
    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2' >")
        }
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.FullName</h5>
                    <p class="card-text">@item.Company</p>
                    <a asp-controller="Home" asp-action="Update" class="btn btn-sm btn-warning" asp-route-id="@item.Id">Edit</a>
                    <a asp-controller="Home" asp-action="RemovePersonItem" class="btn btn-sm btn-danger" asp-route-id="@item.Id">Delete</a>
                    <a asp-controller="Home" asp-action="Detail" class="btn btn-sm btn-success" asp-route-id="@item.Id">Detail</a>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }

    }
}